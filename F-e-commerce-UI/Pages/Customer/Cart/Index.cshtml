@page
@model F_e_commerce_UI.Pages.Customer.Cart.IndexModel
@{
}

<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 ">
                <div class="row">
                    <div class="col-6 pt-2">
                        Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <a asp-page="../Home/Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @{
                    decimal total = 0;
                }
                @foreach (var shopCart in Model.ShoppingCarts)
                {
                    <div class="row">
                        <div class="d-none d-lg-block col-lg-2 text-center py-2">
                            <img src="@shopCart.MenuItem.Image" class="rounded" width="120" height="80" />
                        </div>
                        <div class="col-12 text-sm-center text-md-start col-md-5 pt-md-4 ">
                            <h4><strong></strong></h4>

                            <div class="badge rounded-pill bg-warning text-center" style="font-size:12px;">
                                @shopCart.MenuItem.Category.Name
                            </div>
                            <div class="badge rounded-pill btn-DarkBlue text-center" style="font-size:12px;">
                                @shopCart.MenuItem.FoodType.Name
                            </div>
                        </div>
                        <div class="col-12 text-sm-center col-md-5 text-md-start row pt-3">
                            <div class="col-4 text-md-right pt-md-3">
                                <h6><strong>$@(shopCart.MenuItem.Price) <span class="text-muted">x</span> @(shopCart.Count) </strong></h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6" >
                                <button asp-page-handler="Increment" asp-route-id="@shopCart.Id" type="submit" class="btn btn-green">
                                        <i class="bi bi-plus-square"></i>
                                    </button>
                                <button asp-page-handler="Decrement" asp-route-id="@shopCart.Id" type="submit" class="btn btn-warning">
                                        <i class="bi bi-dash-square"></i>
                                    </button>
                            </div>
                            <div class="col-2 col-sm-4 col-lg-2 text-right">
                                <button asp-page-handler="Remove" asp-route-id="@shopCart.Id" type="submit" class="btn btn-Red">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    total += shopCart.MenuItem.Price * shopCart.Count;
                }

                <hr />


                <div class="row">
                    <div class="col-12 col-md-5">
                    </div>
                    <div class="col-12 col-md-6 offset-md-1 col-lg-4 offset-lg-3 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info">@(total) Total (USD)</span>
                                <strong class="text-info">$</strong>
                            </li>
                        </ul>
                    </div>
                </div>


            </div>
            <div class="card-footer">
                <div class="col-12 col-lg-4 offset-lg-8 col-md-6 offset-md-6">
                    <a class="btn btn-blue form-control">Summary</a>
                </div>
            </div>
        </div>
    </div>
</form>

