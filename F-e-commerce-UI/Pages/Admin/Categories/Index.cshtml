@page
@model IndexModel
@{
}
<div class="container p-3 ">
    <div class="row pt-3">
       <partial name="Shared/_SucceddToastHC"/>
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp;Create</a>
        </div>
        <table class="table table-hover table-responsive table-striped table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in @Model._category)
            {
                <tr>
                    <td class="col-6">@obj.Name</td>
                    <td class="col-4">@obj.DisplayOrder</td>
                    <td class="col-2">
                        <div class="w-50 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-page="Edit" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a asp-route-id="@obj.Id" asp-page="Delete" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@section Scripts
{
  <partial name="Shared/_SucceddToastScript"/>
}

   
 