@page
@model DeleteModel
@{
}
<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Delete Categories</h2>
        </div>
        <div class="col-6 text-end"><a class="btn btn-primary" asp-page="index">back to page</a></div>
        <table class="table table-hover table-responsive table-striped table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="col-6">@Model.Category.Name</td>
                <td class="col-4">@Model.Category.DisplayOrder</td>
            </tr>
            </tbody>
        </table>
        <div>
            <form method="POST" class="col-2 text-center">
                <input type="hidden" asp-for="Category.DisplayOrder"/>
                <input type="hidden" asp-for="Category.Name"/>
                <input type="hidden" asp-for="Category.Id"/>
                <button type="submit" class="btn btn-danger form-control"><i class="bi-trash-fill"></i>&nbsp; Delete</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}